{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metrica-dip.com/schemas/portfolio.schema.json",
  "title": "Portfolio Content Schema",
  "description": "Schema para contenido dinámico del portfolio",
  "type": "object",
  "required": ["categories", "projects"],
  "properties": {
    "categories": {
      "type": "array",
      "description": "Categorías de proyectos del portfolio",
      "items": {
        "type": "object",
        "required": ["id", "name", "slug"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "ID único de la categoría"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Nombre de la categoría"
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Slug para URL"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Descripción de la categoría"
          },
          "icon": {
            "type": "string",
            "description": "Nombre del ícono (Lucide React)"
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Color de la categoría en formato hex"
          },
          "featured_image": {
            "type": "string",
            "format": "uri",
            "description": "Imagen destacada de la categoría"
          },
          "projects_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Número de proyectos en esta categoría"
          },
          "total_investment": {
            "type": "string",
            "description": "Inversión total en esta categoría"
          },
          "total_area": {
            "type": "string",
            "description": "Área total construida en esta categoría"
          },
          "featured": {
            "type": "boolean",
            "default": false,
            "description": "Si la categoría es destacada"
          },
          "order": {
            "type": "integer",
            "minimum": 0,
            "description": "Orden de visualización"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "default": "active",
            "description": "Estado de la categoría"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" },
              "created_by": { "type": "string" },
              "updated_by": { "type": "string" }
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "description": "Proyectos del portfolio",
      "items": {
        "type": "object",
        "required": ["id", "title", "category"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "ID único del proyecto"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Título del proyecto"
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Slug para URL"
          },
          "category": {
            "type": "string",
            "description": "ID de la categoría (FK a categories.id)"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Descripción del proyecto"
          },
          "client": {
            "type": "string",
            "description": "Cliente del proyecto"
          },
          "location": {
            "type": "object",
            "properties": {
              "city": { "type": "string" },
              "district": { "type": "string" },
              "region": { "type": "string" },
              "country": { "type": "string", "default": "Perú" },
              "coordinates": {
                "type": "object",
                "properties": {
                  "lat": { "type": "number" },
                  "lng": { "type": "number" }
                }
              }
            }
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": { "type": "string", "format": "uri" },
                "fallback": { "type": "string", "pattern": "^/[^/].*" },
                "alt": { "type": "string" },
                "caption": { "type": "string" },
                "order": { "type": "integer", "minimum": 0 }
              }
            }
          },
          "featured_image": {
            "type": "string",
            "format": "uri",
            "description": "Imagen principal del proyecto"
          },
          "status": {
            "type": "string",
            "enum": ["planning", "in_progress", "completed", "on_hold"],
            "description": "Estado del proyecto"
          },
          "details": {
            "type": "object",
            "properties": {
              "area": { "type": "string", "description": "Área del proyecto" },
              "investment": { "type": "string", "description": "Inversión del proyecto" },
              "duration": { "type": "string", "description": "Duración del proyecto" },
              "year": { "type": "integer", "minimum": 2000 },
              "team_size": { "type": "integer", "minimum": 1 },
              "services": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Servicios proporcionados"
              }
            }
          },
          "team": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Equipos involucrados en el proyecto"
          },
          "technologies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tecnologías utilizadas"
          },
          "awards": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "organization": { "type": "string" },
                "year": { "type": "integer" },
                "description": { "type": "string" }
              }
            }
          },
          "featured": {
            "type": "boolean",
            "default": false,
            "description": "Si el proyecto es destacado"
          },
          "order": {
            "type": "integer",
            "minimum": 0,
            "description": "Orden de visualización"
          },
          "url": {
            "type": "string",
            "pattern": "^/portfolio/[a-z0-9-]+/[a-z0-9-]+$",
            "description": "URL del proyecto"
          },
          "external_url": {
            "type": "string",
            "format": "uri",
            "description": "URL externa del proyecto"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" },
              "created_by": { "type": "string" },
              "updated_by": { "type": "string" },
              "views": { "type": "integer", "minimum": 0 },
              "likes": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "total_categories": {
          "type": "integer",
          "minimum": 0,
          "description": "Número total de categorías activas"
        },
        "total_projects": {
          "type": "integer",
          "minimum": 0,
          "description": "Número total de proyectos"
        },
        "featured_categories_limit": {
          "type": "integer",
          "minimum": 1,
          "default": 6,
          "description": "Máximo de categorías destacadas"
        },
        "featured_projects_limit": {
          "type": "integer",
          "minimum": 1,
          "default": 8,
          "description": "Máximo de proyectos destacados"
        },
        "page_size": {
          "type": "integer",
          "minimum": 1,
          "default": 12,
          "description": "Proyectos por página en listados"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "schema_version": {
          "type": "string",
          "default": "1.0.0"
        }
      }
    }
  },
  "additionalProperties": false
}