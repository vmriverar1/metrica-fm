{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsbuildinfo",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ]
}